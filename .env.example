# ============================================
# NIMWEMA PLATFORM - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values

# Database Configuration - Using SQLite for demo
DB_TYPE=sqlite
DB_FILE=./nimwema.db

# Server Configuration
PORT=3000
NODE_ENV=development

# FlexPay Configuration
FLEXPAY_BASE_URL=https://backend.flexpay.cd/api/rest/v1/paymentService
FLEXPAY_AUTH_TOKEN=Bearer YOUR_TOKEN_HERE
FLEXPAY_MERCHANT_CODE=CPOSSIBLE
FLEXPAY_ENVIRONMENT=test
FLEXPAY_PASSWORD=YOUR_PASSWORD_HERE

# Database Configuration (Optional - for PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nimwema
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# SMS Configuration (Africa's Talking)
SMS_PROVIDER=africas_talking
SMS_API_KEY=YOUR_API_KEY_HERE
SMS_USERNAME=YOUR_USERNAME_HERE
SMS_SENDER_ID=NIMWEMA
SESSION_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING

# Application Settings
BASE_URL=http://localhost:3000
DEFAULT_LANGUAGE=fr
VOUCHER_CODE_LENGTH=12
VOUCHER_EXPIRY_DAYS=90
DEFAULT_FEE_PERCENT=3.5

# SMS Provider (Africa's Talking)
SMS_ENABLED=true

# Payment Gateway (FlexPay)
PAYMENT_ENABLED=true
